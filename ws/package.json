{
  "name": "hafiportrait-websocket-service",
  "version": "1.0.0",
  "description": "Standalone WebSocket service for HafiPortrait real-time notifications",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-connection.js",
    "health": "node health-check.js",
    "docker:build": "docker build -t hafiportrait-websocket .",
    "docker:run": "docker run -p 3001:3001 -p 3002:3002 hafiportrait-websocket",
    "docker:compose": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f websocket",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "websocket",
    "real-time",
    "notifications",
    "hafiportrait"
  ],
  "author": "HafiPortrait Photography",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.18.0",
    "socket.io": "^4.8.1",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}