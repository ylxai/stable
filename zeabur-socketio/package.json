{
  "name": "hafiportrait-socketio-zeabur",
  "version": "1.0.0",
  "description": "HafiPortrait Socket.IO service optimized for Zeabur deployment",
  "main": "server.js",
  "scripts": {
    "start": "pm2-runtime start ecosystem.config.js",
    "start:node": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-connection.js",
    "health": "node health-check.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:simple": "pm2-runtime start ecosystem.simple.js",
    "debug:env": "node debug-env.js",
    "debug:startup": "node debug-startup.js --debug-only",
    "debug:full": "node debug-startup.js"
  },
  "keywords": [
    "socketio",
    "real-time",
    "notifications",
    "hafiportrait",
    "zeabur"
  ],
  "author": "HafiPortrait Photography",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pm2": "^5.3.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "zeabur": {
    "port": 8080,
    "healthCheck": {
      "path": "/health",
      "port": 8080
    }
  }
}
